<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>

<%= image_tag(portfolio_item.thumb_image, alt: portfolio_item.title) unless portfolio_item.thumb_image.nil? %>

<% if policy(portfolio_item).edit? %>
  <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
<% end %>

<% if policy(portfolio_item).destroy? %>
  <%= link_to 'Delete Portfolio Item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
