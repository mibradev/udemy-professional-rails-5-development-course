<%= form_with(model: portfolio_item, local: true) do |form| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "error") %> prohibited this portfolio item from being saved:</h2>

      <ul>
        <% portfolio_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <h2 class="mb-4">Item</h2>

      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>

      <div class="field form-group">
        <%= form.label :main_image %>
        <%= form.file_field :main_image, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :thumb_image %>
        <%= form.file_field :thumb_image, class: 'form-control' %>
      </div>
    </div>

    <div class="col">
      <h2 class="mb-4">Technologies</h2>

      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="field form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
