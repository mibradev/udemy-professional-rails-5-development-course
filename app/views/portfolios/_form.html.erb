<%= form_with(model: portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col">
      <h2 class="mb-4">Item</h2>

      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>

    <div class="col">
      <h2 class="mb-4">Technologies</h2>

      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="field form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
