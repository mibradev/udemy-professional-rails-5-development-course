<%= form_with(model: comment, local: true) do |form| %>
  <% if flash[:comment_errors] %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:comment_errors].count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% flash[:comment_errors].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :blog_id, value: blog.id %>

  <div class="field form-group">
    <%= form.label :content, class: 'sr-only' %>
