<div class="mb-3">
  <div class="row no-gutters">
    <div class="col-xs-1">
      <%= gravatar comment.user, class: 'w-100' %>
    </div>

    <div class="col-xs-11 pl-3">
      <div>
        <div>
          <strong class="text-secondary"><%= comment.user.name %></strong>
          <small class="text-muted"><em><%= time_ago_in_words comment.created_at %> ago</em></small>

          <% if policy(comment).destroy? %>
            <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>


        <p><%= comment.content %></p>
      </div>
    </div>
  </div>
</div>
