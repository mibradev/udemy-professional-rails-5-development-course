<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<% if policy(@blog).edit? %>
  <%= link_to 'Edit', edit_blog_path(@blog) %> |
<% end %>

<% if policy(@blog).index? %>
  <%= link_to 'Back', blogs_path %>
<% end %>
