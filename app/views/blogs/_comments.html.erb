<div>
  <h3>Comments</h3>

  <%= render 'comments/form', comment: comment, blog: blog %>

  <% if @comments.any? %>
    <div class="mt-4" data-channel="comments" data-blog-id="<%= blog.id %>">
      <%= render @comments %>
    </div>

    <div data-comments-pagination>
      <%= comments_pagination %>
    </div>
  <% end %>
</div>
