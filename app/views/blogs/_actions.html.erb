<% if policy(blog).toggle_status? || policy(blog).edit? || policy(blog).destroy? %>
  <div class="mb-4 text-right">
    <div class="btn-group">
      <% if policy(blog).toggle_status? %>
        <%= link_to blog.status.capitalize, toggle_status_blog_path(blog), class: status_button_class(blog.status) %>
      <% end %>

      <% if policy(blog).edit? %>
        <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-primary btn-sm' %>
      <% end %>

      <% if policy(blog).destroy? %>
        <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  </div>
<% end %>
