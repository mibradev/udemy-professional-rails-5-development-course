<div class="container mt-5 mb-5">
  <div class="row">
    <main role="main" class="col-md-8">
      <div class="row align-items-center">
        <h2 class="col">Editing Blog</h2>

        <% if policy(@blog).show? %>
          <div class="col text-right">
            <%= link_to 'Show', @blog, class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>

      <hr>

      <%= render 'form', blog: @blog %>

      <% if policy(@blog).index? %>
        <div class="mt-3">
          <%= link_to 'Back', blogs_path %>
        </div>
      <% end %>
    </main>

    <%= render 'sidebar' %>
  </div>
</div>
